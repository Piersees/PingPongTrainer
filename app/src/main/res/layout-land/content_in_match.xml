<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_in_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="haikal.android.fr.pingpong.InMatchActivity"
    tools:showIn="@layout/activity_in_match">

    <TextView
        android:text="Match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:text="J1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/J1name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreJ1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:text="J1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/service"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:text="11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreJ2"
        android:layout_alignBaseline="@+id/service"
        android:layout_alignBottom="@+id/service"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <Button
        android:text="@string/foul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fautebutton"
        android:onClick="myClickHandler"
        android:layout_alignBaseline="@+id/ace2balle"
        android:layout_alignBottom="@+id/ace2balle"
        android:layout_toRightOf="@+id/ace2balle"
        android:layout_toEndOf="@+id/ace2balle"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="J2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/J2name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setJ1"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setJ2"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <Button
        android:text="Ace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ace2balle"
        android:onClick="myClickHandler"
        android:layout_below="@+id/textView12"
        android:layout_toRightOf="@+id/ace1balle"
        android:layout_toEndOf="@+id/ace1balle"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <Button
        android:text="@string/takepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="myClickHandler"
        android:id="@+id/buttonPic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fautej1"
        android:text="@string/foul"
        android:onClick="myClickHandler"
        android:layout_above="@+id/fautej2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fautej2"
        android:text="@string/foul"
        android:onClick="myClickHandler"
        android:layout_alignBaseline="@+id/ptDefJ2"
        android:layout_alignBottom="@+id/ptDefJ2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptDefJ2"
        android:text="@string/def"
        android:onClick="myClickHandler"
        android:layout_below="@+id/ptDefJ1"
        android:layout_toLeftOf="@+id/fautej1"
        android:layout_toStartOf="@+id/fautej1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptDefJ1"
        android:text="@string/def"
        android:onClick="myClickHandler"
        android:layout_above="@+id/ptAtkJ2"
        android:layout_alignLeft="@+id/ptDefJ2"
        android:layout_alignStart="@+id/ptDefJ2" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ptAtkJ1"
        android:layout_toEndOf="@+id/ptAtkJ1"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:text="Sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ptDefJ1"
        android:layout_toEndOf="@+id/ptDefJ1" />

    <TextView
        android:text="Sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ace1balle"
        android:layout_alignEnd="@+id/ace1balle" />

    <Button
        android:text="Ace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ace1balle"
        android:onClick="myClickHandler"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/endmatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matchEnd"
        android:onClick="myClickHandler"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/scoreJ1"
        android:layout_alignStart="@+id/scoreJ1" />

    <TextView
        android:text="@string/firstball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_above="@+id/ace1balle"
        android:layout_toLeftOf="@+id/setJ1"
        android:layout_toStartOf="@+id/setJ1" />

    <TextView
        android:text="@string/sndball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"

        android:layout_above="@+id/ace2balle"
        android:layout_toRightOf="@+id/buttonPic"
        android:layout_toEndOf="@+id/buttonPic" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13" />

    <TextView
        android:text="Service :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/scoreJ1"
        android:layout_alignBottom="@+id/scoreJ1"
        android:layout_alignRight="@+id/fautebutton"
        android:layout_alignEnd="@+id/fautebutton" />

    <TextView
        android:text="J2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2name"
        android:layout_above="@+id/ptAtkJ2"
        android:layout_alignRight="@+id/fautebutton"
        android:layout_alignEnd="@+id/fautebutton" />

    <TextView
        android:text="J1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p1name"
        android:layout_above="@+id/matchEnd"
        android:layout_alignLeft="@+id/p2name"
        android:layout_alignStart="@+id/p2name" />

    <Button
        android:text="@string/atk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptAtkJ1"
        android:onClick="myClickHandler"
        android:layout_alignBaseline="@+id/ptDefJ1"
        android:layout_alignBottom="@+id/ptDefJ1"
        android:layout_toLeftOf="@+id/ptDefJ1"
        android:layout_toStartOf="@+id/ptDefJ1" />

    <Button
        android:text="@string/atk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptAtkJ2"
        android:onClick="myClickHandler"
        android:layout_alignBaseline="@+id/p1name"
        android:layout_alignBottom="@+id/p1name"
        android:layout_alignLeft="@+id/ptAtkJ1"
        android:layout_alignStart="@+id/ptAtkJ1" />

    <TextView
        android:text="@string/exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/echange"
        android:layout_alignTop="@+id/fautebutton"
        android:layout_toRightOf="@+id/ptAtkJ1"
        android:layout_toEndOf="@+id/ptAtkJ1"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

</RelativeLayout>
