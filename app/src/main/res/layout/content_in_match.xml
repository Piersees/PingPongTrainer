<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_in_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="haikal.android.fr.pingpong.InMatchActivity"
    tools:showIn="@layout/activity_in_match">

    <Button
        android:text="@string/endmatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/matchEnd"
        android:onClick="myClickHandler"
        />

    <TextView
        android:text="Match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="J1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/J1name"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="J2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/J2name"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignBaseline="@+id/J1name"
        android:layout_alignBottom="@+id/J1name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreJ2"
        android:layout_alignBaseline="@+id/scoreJ1"
        android:layout_alignBottom="@+id/scoreJ1"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:text="06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreJ1"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/J1name"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <TextView
        android:text="Service :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/scoreJ1"
        android:layout_alignLeft="@+id/scoreJ1"
        android:layout_alignStart="@+id/scoreJ1" />

    <TextView
        android:text="J1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignLeft="@+id/scoreJ2"
        android:layout_alignStart="@+id/scoreJ2"
        android:id="@+id/service" />


    <View
        android:layout_width="2dp"
        android:layout_height="100dp"
        android:background="@android:color/black"
        android:layout_below="@id/textView2"
        android:layout_alignRight="@id/scoreJ1"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/scoreJ1"
        android:layout_toEndOf="@+id/scoreJ1" />

    <TextView
        android:text="@string/sndball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"

        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toLeftOf="@+id/service"
        android:layout_toStartOf="@+id/service" />

    <Button
        android:text="Ace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ace2balle"
        android:layout_alignBaseline="@+id/ace1balle"
        android:layout_alignBottom="@+id/ace1balle"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:onClick="myClickHandler"
        />

    <Button
        android:text="@string/foul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fautebutton"
        android:layout_alignBaseline="@+id/ace2balle"
        android:layout_alignBottom="@+id/ace2balle"
        android:layout_alignLeft="@+id/matchEnd"
        android:layout_alignStart="@+id/matchEnd"
        android:onClick="myClickHandler"
        />

    <TextView
        android:text="@string/firstball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/J1name"
        android:layout_alignStart="@+id/J1name" />

    <Button
        android:text="Ace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ace1balle"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:onClick="myClickHandler"
        />

    <TextView
        android:text="Echange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/echange"
        android:layout_below="@+id/ace2balle"
        android:layout_toRightOf="@+id/scoreJ1"
        android:layout_toEndOf="@+id/scoreJ1" />

    <TextView
        android:text="J2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p1name"
        android:layout_alignRight="@+id/p1name"
        android:layout_alignEnd="@+id/p1name"
        android:layout_marginTop="25dp"
        android:id="@+id/p2name" />

    <TextView
        android:text="J1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/p1name"
        android:layout_below="@+id/echange"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <Button
        android:text="@string/atk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptAtkJ1"
        android:layout_alignLeft="@+id/ptAtkJ2"
        android:layout_alignStart="@+id/ptAtkJ2"
        android:layout_below="@+id/echange"
        android:layout_above="@+id/ptAtkJ2"
        android:onClick="myClickHandler"
        />

    <Button
        android:text="@string/atk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptAtkJ2"
        android:layout_alignBaseline="@+id/p2name"
        android:layout_alignBottom="@+id/p2name"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:onClick="myClickHandler"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptDefJ2"
        android:text="@string/def"
        android:layout_below="@+id/ptDefJ1"
        android:layout_alignLeft="@+id/ptDefJ1"
        android:layout_alignStart="@+id/ptDefJ1"
        android:onClick="myClickHandler"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fautej2"
        android:text="@string/foul"
        android:layout_alignBaseline="@+id/ptAtkJ2"
        android:layout_alignBottom="@+id/ptAtkJ2"
        android:layout_toRightOf="@+id/ptDefJ2"
        android:layout_toEndOf="@+id/ptDefJ2"
        android:onClick="myClickHandler"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setJ1"
        android:layout_above="@+id/textView12"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/scoreJ1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setJ2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/service"
        android:layout_alignTop="@+id/scoreJ2"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/ptDefJ1"
        android:layout_alignLeft="@+id/fautebutton"
        android:layout_alignStart="@+id/fautebutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptDefJ1"
        android:text="@string/def"
        android:onClick="myClickHandler"
        android:layout_above="@+id/ptAtkJ2"
        android:layout_toRightOf="@+id/ptAtkJ1"
        android:layout_toEndOf="@+id/ptAtkJ1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fautej1"
        android:text="@string/foul"
        android:onClick="myClickHandler"
        android:layout_above="@+id/fautej2"
        android:layout_toEndOf="@+id/ptDefJ1"
        android:layout_alignBaseline="@+id/fautebutton"
        android:layout_alignBottom="@+id/fautebutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/fautebutton"
        android:layout_alignStart="@+id/fautebutton" />

</RelativeLayout>
